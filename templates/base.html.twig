<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}Cool code{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('css/nav.css') }}" />
            <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/easyadmin/stylesheet/bootstrap.min.css') }}" />
        {% endblock %}
    </head>
    <body>
        <nav id="main-nav" class="navbar navbar-default navbar-fixed-top navbar-custom">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header page-scroll">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-um-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                    </button>
                    <a class="navbar-brand" href="{{ path('home') }}"><img class="logo-img" src="{{ asset('images/coresite/logoUM1.png') }}" /></a>
                </div>

                <div class="collapse navbar-collapse" id="bs-um-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="">News</a>
                        </li>
                        <li>
                            <a href="">Projets</a>
                        </li>
                        <li>
                            <a href="">Jeux</a>
                        </li>
                        <li>
                            <a href="">A propos</a>
                        </li>
                        <li>
                            <a href="">Connexion</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    {% block header %}
    {% endblock %}
    {% block body %}
    {% endblock %}
    {% block javascripts %}
        <script src="{{ asset('bundles/easyadmin/javascript/jquery.min.js') }}"></script>
        <script src="{{ asset('bundles/easyadmin/javascript/bootstrap.min.js') }}"></script>
    {% endblock %}
    </body>
</html>
